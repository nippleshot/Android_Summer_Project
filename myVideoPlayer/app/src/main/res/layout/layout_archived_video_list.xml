<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/archived_container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/archived_thumbnail"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="NICKNAME的视频"
            android:layout_weight="1"
            android:id="@+id/archived_nickname"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:textStyle="bold"
            android:text="从 00:00 开始"
            android:layout_weight="1"
            android:id="@+id/archived_time"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_weight="4"
            android:textSize="10dp"
            android:text="视频 DESCRIPTION 视频 DESCRIPTION 视频 DESCRIPTION 视频 DESCRIPTION "
            android:id="@+id/archived_description"/>
    </LinearLayout>

</LinearLayout>